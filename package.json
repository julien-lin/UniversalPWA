{
  "name": "universal-pwa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev:web": "pnpm --filter @julien-lin/universal-pwa-web-ui dev",
    "build:web": "pnpm --filter @julien-lin/universal-pwa-web-ui build",
    "lint:web": "pnpm --filter @julien-lin/universal-pwa-web-ui lint",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test -- --coverage",
    "lint": "pnpm -r lint",
    "build": "pnpm -r build",
    "prepublishOnly": "pnpm build && pnpm lint && pnpm test",
    "publish:templates": "cd packages/templates && pnpm publish --access public --no-git-checks",
    "publish:core": "cd packages/core && pnpm publish --access public --no-git-checks",
    "publish:cli": "cd packages/cli && pnpm publish --access public --no-git-checks",
    "publish:all": "pnpm publish:templates && pnpm publish:core && pnpm publish:cli"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "lighthouse": "^13.0.1",
    "playwright": "^1.57.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "@julien-lin/universal-pwa-core": "workspace:^",
    "@julien-lin/universal-pwa-templates": "workspace:^",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "jotai": "^2.16.0",
    "vitest": "^4.0.16",
    "zustand": "^5.0.9"
  }
}